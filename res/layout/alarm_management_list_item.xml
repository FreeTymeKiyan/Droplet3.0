<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="54dp" >
    
    <!-- 习惯名字 -->
    <TextView 
        android:id="@+id/tv_habitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLength="24"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        />
    
    <!-- 闹钟时间 -->
    <TextView 
        android:id="@+id/tv_alarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_alignLeft="@id/tv_habitName"
        android:layout_below="@id/tv_habitName"
        android:layout_marginTop="8dp"
        />
    
    <!-- 闹钟状态的按钮 -->
    <ToggleButton 
		android:id="@+id/tBtn_alarmState"        
		android:layout_width="60dp"
		android:layout_height="22dp"
		android:textSize="10sp"
		android:textOn="@string/tBtn_alarmStateOn"
		android:textOff="@string/tBtn_alarmStateOff"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"		
		android:layout_marginRight="10dp"
        />
</RelativeLayout>